<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h2><%= t :sign_up %></h2>

    <%= form_for resource, as: resource_name,
      url: registration_path(resource_name),
      html: {multipart: true} do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :user_name %>
        <%= f.text_field :user_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :age %>
        <%= f.number_field :age, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :phone_number %>
        <%= f.number_field :phone_number, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control" %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="actions">
        <%= f.submit t(:sign_up), class: "btn btn-primary form-control" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
